---
import { HTMLAttributes } from "astro/types";

export interface Props extends HTMLAttributes<"svg"> {
	size?: number;
}

const { size = 24 } = Astro.props;
---

<svg
	viewBox="0 0 24 24"
	width={size}
	height={size}
	fill="currentColor"
	xmlns="http://www.w3.org/2000/svg"
	{...Astro.props}
>
	<slot />
</svg>
